<ehcache xsi:noNamespaceSchemaLocation="ehcache.xsd"
	updateCheck="true" monitoring="autodetect" dynamicConfig="true">

	<diskStore path="../../var/cache" />

	<defaultCache maxEntriesLocalHeap="10000" eternal="false"
		timeToIdleSeconds="21600" timeToLiveSeconds="21600"
		memoryStoreEvictionPolicy="LRU" overflowToDisk="true" diskPersistent="false"
		diskExpiryThreadIntervalSeconds="120" />

	<cache name="sysconfigs" maxEntriesLocalHeap="10000" eternal="false"
		timeToIdleSeconds="21600" timeToLiveSeconds="21600"
		memoryStoreEvictionPolicy="LRU" overflowToDisk="true" diskPersistent="false"
		diskExpiryThreadIntervalSeconds="120" />

	<cache name="menus" maxEntriesLocalHeap="10000" eternal="false"
		timeToIdleSeconds="21600" timeToLiveSeconds="21600"
		memoryStoreEvictionPolicy="LRU" overflowToDisk="true" diskPersistent="false"
		diskExpiryThreadIntervalSeconds="120" />

	<cache name="users" maxEntriesLocalHeap="10000" eternal="false"
		timeToIdleSeconds="21600" timeToLiveSeconds="21600"
		memoryStoreEvictionPolicy="LRU" overflowToDisk="true" diskPersistent="false"
		diskExpiryThreadIntervalSeconds="120" />

	<cache name="groups" maxEntriesLocalHeap="10000" eternal="false"
		timeToIdleSeconds="21600" timeToLiveSeconds="21600"
		memoryStoreEvictionPolicy="LRU" overflowToDisk="true" diskPersistent="false"
		diskExpiryThreadIntervalSeconds="120" />

	<cache name="roles" maxEntriesLocalHeap="10000" eternal="false"
		timeToIdleSeconds="21600" timeToLiveSeconds="21600"
		memoryStoreEvictionPolicy="LRU" overflowToDisk="true" diskPersistent="false"
		diskExpiryThreadIntervalSeconds="120" />

</ehcache>